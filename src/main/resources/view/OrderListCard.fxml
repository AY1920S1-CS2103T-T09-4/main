<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <FlowPane fx:id="tags" />
            <Label fx:id="orderId" styleClass="cell_small_label" text="\$orderId" />
            <Label fx:id="customerName" styleClass="cell_small_label" text="\$customerName" />
            <Label fx:id="phoneName" styleClass="cell_small_label" text="\$phoneName" />
            <Label fx:id="phoneColour" styleClass="cell_small_label" text="\$phoneColour" />
            <Label fx:id="phoneCapacity" styleClass="cell_small_label" text="\$phoneCapacity" />
            <Label fx:id="orderPrice" styleClass="cell_small_label" text="\$orderPrice" />
            <Label fx:id="orderStatus" styleClass="cell_small_label" text="\$orderStatus" />
        </VBox>
    </GridPane>
</HBox>
