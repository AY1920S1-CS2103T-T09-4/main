<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <VBox>
                    <Label text="Customer details" styleClass="cell_big_label" />
                    <Label fx:id="customerName" styleClass="cell_big_label" />
                    <Label fx:id="customerEmail" styleClass="cell_big_label" />
                    <Label fx:id="customerContactNumber" styleClass="cell_small_label"  />
                    <Label fx:id="phoneName" styleClass="cell_small_label" text="\$phoneName"/>
                    <Label fx:id="phoneColour" styleClass="cell_small_label" text="\$phoneColour" />
                    <Label fx:id="phoneCapacity" styleClass="cell_small_label" text="\$phoneCapacity" />
                    <Label fx:id="phoneCost" styleClass="cell_small_label" text="\$phoneCost" />
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="15" />
                    </padding>
                </VBox>
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Order details" styleClass="cell_big_label" />
                    <Label fx:id="orderId" styleClass="cell_small_label" text="\$orderId" />
                    <Label fx:id="orderPrice" styleClass="cell_small_label" text="\$orderPrice" />
                    <Label fx:id="orderStatus" styleClass="cell_small_label" text="\$orderStatus" />
                    <Label fx:id="phoneIdentityNumber" styleClass="cell_small_label" text="\$phoneId" />
                    <Label fx:id="phoneSerialNumber" styleClass="cell_small_label" text="\$phoneIdentityNumber" />
                    <FlowPane fx:id="tags" />
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="15" />
                    </padding>
                </VBox>

            </HBox>

        </VBox>
    </GridPane>
</HBox>
